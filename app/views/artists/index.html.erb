<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Artistas</h1>

      <div class="text-right">
        <%= link_to "Publicar Artista", new_artist_path, class: "btn btn-primary" %>
      </div>

      <table class="table">
        <tr>
          <th>Id</th>
          <th>Nombre</th>
          <th>URL</th>
        </tr>
        <% @artists.each do |artist| %>
          <tr>
            <td><%= artist.id %></td>
            <td><%= artist.name %></td>
            <td><%= artist.image_url %></td>
          </tr>
        <% end %>
      </table>
    </div> 
  </div> 
</div>

